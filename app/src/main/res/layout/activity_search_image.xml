<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#775F17"
    tools:context=".Activities.search_image">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:onClick="back_button"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_searchImage"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_margin="10sp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_searchImage"
        app:layout_constraintEnd_toEndOf="@+id/iv_searchImage"
        app:layout_constraintStart_toStartOf="@+id/iv_searchImage"
        app:layout_constraintTop_toTopOf="@+id/iv_searchImage" />

    <TextView
        android:id="@+id/image_loads_here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEDIA LOADS HERE"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="@+id/iv_searchImage"
        app:layout_constraintEnd_toEndOf="@+id/iv_searchImage"
        app:layout_constraintStart_toStartOf="@+id/iv_searchImage"
        app:layout_constraintTop_toTopOf="@+id/iv_searchImage"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>